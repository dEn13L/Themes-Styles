    >

  <LinearLayout
      android:id="@+id/itemContainer"
      style="?itemContainer"
      >

    <ImageView
        android:id="@+id/itemImage"
        style="?itemImage"
        />

    <Button
        android:id="@+id/itemButton"
        style="?itemButton"
        />

  </LinearLayout>

</RelativeLayout>